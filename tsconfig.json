{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["es2018"],
    "skipLibCheck": true,
    "paths": {
      "@nestjs/graphql": ["../graphql/lib"],
      "@nestjs/graphql/*": ["../graphql/lib/*"],
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
